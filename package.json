    "@types/jsdom": "^21.1.7",
    "@types/lz-string": "^1.3.34",
    "@types/node": "^22.0.0",
    "@types/react-dom": "^19.1.7",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.0.0",
    "autoprefixer": "^10.4.21",
    "chalk": "^5.5.0",
    "concurrently": "^9.2.0",
    "convex-test": "^0.0.38",
    "dotenv": "^17.2.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.0",
    "msw": "^2.10.5",
    "postcss": "^8.5.6",
    "prettier": "^3.3.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.4",
    "typescript": "^5.5.0",
    "vite": "^5.4.19",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
