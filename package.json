{
  "name": "marketing-tool",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "next start",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "tsx src/tests/integration/meta-api-test.ts",
    "test:meta-api": "tsx scripts/test-meta-api-integration.ts",
    "test:error-scenarios": "tsx scripts/test-error-scenarios.ts",
    "test:rate-limiting": "tsx scripts/test-rate-limiting.ts",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:ci": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 600",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "dev:all": "concurrently \"npm run dev\" \"npm run type-check:watch\" \"npm run test:watch\" --names \"VITE,TSC,TEST\" --prefix name",
    "prepare": "husky",
    "preview": "vite preview",
    "pre-check": "npm run type-check && npm run lint:ci && npm test -- --run",
    "pre-check:full": "./scripts/pre-push-check.sh",
    "check-all": "npm run type-check && npm run lint && npm test -- --run && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
