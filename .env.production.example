# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Meta API Configuration
VITE_META_APP_ID=your_production_app_id
VITE_META_AD_ACCOUNT_ID=act_your_production_account_id

# System User Token (Required for production)
# Generate from Business Manager > System Users
VITE_META_SYSTEM_USER_TOKEN=your_system_user_token

# Feature Flags
VITE_USE_MOCK_DATA=false
VITE_ENABLE_REALTIME_UPDATES=true

# Convex Production
VITE_CONVEX_URL=https://your-production-instance.convex.cloud

# Monitoring (Optional)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_ANALYTICS_ID=your-analytics-id

# API Configuration
VITE_API_TIMEOUT=30000
VITE_MAX_RETRIES=3
VITE_ENABLE_API_CACHE=true

# Security
VITE_ENABLE_HTTPS_ONLY=true
VITE_CSP_REPORT_URI=https://your-csp-report-endpoint.com